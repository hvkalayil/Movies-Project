<section id="loader" class="hidden">
    <div class="flex flex-col items-center w-full text-center my-2">
        <h3>File is processing. Please wait</h3>
        <div class="loadingPill bg-cyan-500 text-center text-cyan-500 rounded-xl m-2" style="width: 50px;">Please wait</div>
    </div>
</section>

<script>
    function startLoader(sections) {
        for (const section of sections) {
            document.getElementById(section).style.display = 'none'    
        }
        document.getElementById('loader').style.display = 'block'
    }
</script>