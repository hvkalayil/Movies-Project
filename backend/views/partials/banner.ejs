<header>
    <div class="flex justify-between p-2 py-8 border-b-4 primary-bg">
        <div class="flex flex-col w-1/4">
            <% if (showBack) { %>
                <a href="<%= backLink %>" class="w-10 p-2 cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" strokeWidth={2}>
                        <path strokeLinecap="round" strokeLinejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
                    </svg>
                </a>
            <% } %>
        </div>

        <div class="flex flex-col"> 
            <h1 class="text-4xl font-bold"> <%= title %>  </h1> 
        </div>

        <div class="flex flex-col w-1/4 items-end"> 
            <% if (!showBack) { %>
                <a href="/upload" onmouseover="hoverAnimation()" class="secondary-bg p-2 font-semibold rounded-lg flex hover:primary-soft-gradient">
                    Upload
                    <span class="pl-2">
                       <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                           <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                         </svg>
                    </span>
               </a> 
            <% } %>
        </div>
    </div>
</header>